{% extends "layout.twig" %}
{% block content %}
    {% for blogPost in blogPosts %}
        <div class="blog-post">
            <a href="{{ 'post/' | url  }}{{ blogPost.id }}">

                    <h2>
                        {{ blogPost.title }}
                    </h2>
            </a>

            <p>Oct 5, 2020 by <a href="">Luis</a></p>
            {% if blogPost.img_url %}
                <div class="blog-post-image">
                    <img src="{{ blogPost.img_url }}" alt="">
                </div>
            {% endif %}
            <div class="blog-post-content">
                {{ blogPost.content }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
